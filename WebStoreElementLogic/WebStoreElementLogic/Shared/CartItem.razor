@using Entities

<li class="list-group-item d-flex flex-column flex-xxl-row justify-content-between align-items-start" style="max-width: 16vw;">
    <span class="d-block d-xxl-inline">@Info.Name</span>
    <div>
        <span class="badge bg-custom rounded-pill">@Count</span>
        <span role="button" class="badge bg-standard round-pill" @onclick="() => UpdateCount(1)" aria-label="Increase Quantity">+</span>
        <span role="button" class="badge bg-custom round-pill" @onclick="() => UpdateCount(-1)" aria-label="Decrease Quantity">-</span>
        <button @onclick="Remove" class="btn-custom"></button>
    </div>
</li>
@code {
        [Parameter]
        public Product Info { get; set; }

        [Parameter]
        public int Count { get; set; } = 1;

        [Parameter]
        public int Index { get; set; }

        [Parameter]
        public EventCallback<int> OnRemove { get; set; }

        [Parameter]
        public EventCallback<int[]> OnCountUpdate { get; set; }

        public void Remove()
        {
            OnRemove.InvokeAsync(Index);
        }

        public void UpdateCount(int increment)
        {
            Count += increment;
            OnCountUpdate.InvokeAsync(new int[] { Index, Count });
}

}
