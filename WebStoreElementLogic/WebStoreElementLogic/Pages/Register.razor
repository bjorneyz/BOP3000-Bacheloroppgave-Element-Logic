@page "/register"
@using LoginNamespace = Login;
@using System.ComponentModel.DataAnnotations;

<title>Register</title>
<div class="center">
    <div class="container" style="margin-top: 5%">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card">
                    <div class="card-body">

                        <img src="../images/logos/Element Logic logo red hires.jpg" style="width: 300px; height: 100px;" class="mx-auto d-block mb-4" />

                        <h5 class="card-title text-center mb-4">Register user for Web Store</h5>

                        <EditForm Model="@registerModel" OnValidSubmit="@HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="form-group border mb-4">
                                <div class="input-group">
                                    <InputText id="username" class="form-control narrow-input" autocomplete="off" placeholder="Username" @bind-Value="@registerModel.Username" />
                                    <div class="input-group-append">
                                        <span class="input-group-text" style="background-color: transparent; border: none;">
                                            <!-- Font Awesome icon -->
                                            <i class="fa fa-user fa-2x" style="border: none;"></i>
                                        </span>
                                    </div>
                                </div>
                                <ValidationMessage For="@(() => registerModel.Username)" />
                            </div>
                            <div class="form-group border mb-4">
                                <div class="input-group">
                                    <InputText id="password" class="form-control narrow-input" type="password" placeholder="Password" @bind-Value="@registerModel.Password" />
                                    <div class="input-group-append">
                                        <span class="input-group-text" style="background-color: transparent; border: none;">
                                            <!-- Font Awesome icon -->
                                            <i class="fa fa-lock fa-2x" style="border: none;"></i>
                                        </span>
                                    </div>
                                </div>
                                <ValidationMessage For="@(() => registerModel.Password)" />
                            </div>
                            <div class="form-group form-check">
                                <InputCheckbox class="form-check-input" @bind-Value="@registerModel.RememberMe" />
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>

                            <div class="d-flex justify-content-end">
                                <NavLink href="/login" class="btn btn-link">Back to Login</NavLink>
                                <button type="submit" class="btn btn-login btn-block">Register</button>
                            </div>

                        </EditForm>


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<style>
    .card {
        max-width: 400px;
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .narrow-input {
        width: 50px;
    }
</style>


@code {
    private LoginModel registerModel = new LoginModel();

    private async Task HandleValidSubmit()
    {
        // Handle login logic here
    }


    public class LoginModel
    {
        [Required]
        public string Username { get; set; }

        [Required]
        public string Password { get; set; }

        [Required]
        public bool RememberMe { get; set; }
    }
}
